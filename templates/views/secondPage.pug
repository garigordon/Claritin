doctype html
html(lang='en')
	head
		meta(charset='UTF-8')
		script(type='text/javascript', src='js/jquery-1.5.1.min.js')
		title Title
		script(src='js/mainPage.js')
		link(rel='stylesheet', type='text/css', href='styles/style.css')
		link(href='CSS/style_tut.css', rel='stylesheet', type='text/css')
		script(src='js/alert_tut.js')
		script(src='https://unpkg.com/axios/dist/axios.min.js')
	body
		form#form2(name='myForm', action='http://localhost:3000/api/fileupload/list', method='POST', enctype='multipart/form-data')
			div
				br
				input#first_name(type='text', name='first_name', placeholder='First Name*')
				input#last_name(type='text', name='last_name', placeholder='Last Name*')
				br
				br
				input#Email.form-control(placeholder='Email Address*', name='Email', type='Email', title='Email Address (format: xxx@xxx.xxx)', pattern="[a-zA-Z0-9!#$%&'*+\/=?^_`{|}~.-]+@[a-zA-Z0-9-]+(\.[a-zA-Z0-9-]+)*")
				br
				br
				input#phone(type='text', name='phone', placeholder='Phone Number*')
				input#age(type='text', name='age', maxlength='2', placeholder='Age*')
			br
			div
				input#Accept(type='checkbox', name='subscribe', value='newsletter')
				label(for='Accept') I accept the official rules and regulations
			br
			div
				input#Yes(type='checkbox', name='subscribe', value='newsletter')
				label(for='Yes')
					| Yes, I would like to receive email communications about products and offerings from Bayer, Inc. and its affiliates. I understand I can unsubscribe at any time.
			br
			div
				| *Fields are mandatory
			br
			div
				input(type='button', value='SUBMIT', onclick='myFunction()')
		#slider
			img#image(src='images/img1.jpg')
			.left_hold
				img.left(onclick='photo(-1)', src='images/arrow_left.png')
			.right_hold
				img.right(onclick='photo(1)', src='images/arrow_right.png')
		br
		p#demo(style='color: red;')
		script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.0/jquery.min.js')
		script.
			document.getElementById("age").onkeypress = function(event){
				event = event || window.event;
				if (event.charCode && (event.charCode < 48 || event.charCode > 57))
					return false;
			};
